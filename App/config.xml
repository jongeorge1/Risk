<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
        xmlns:gap	= "http://phonegap.com/ns/1.0"
        id = "com.zoladex.mobile"
        version = "1.0.0.0">

  <name>Prostate Assistant</name>

  <description>
    Prostate Assistant
  </description>

  <author href="http://www.thetechnologystudio.co.uk/"
          email="info@thetechnologystudio.co.uk">
    The Technology Studio
  </author>

  <gap:platforms>
    <gap:platform name="ios" />
    <gap:platform name="android"
                  minVersion="2.1" />
  </gap:platforms>

  <gap:splash src="assets/ipad.png"
              width="768"
              height="1004" />
  <gap:splash src="assets/ipadlandscape.jpg"
              width="1004"
              height="768" />

              width="640"
              height="960" />

  <icon src="assets/Icon.png"
        width="57"
        height="57"
         />

  <icon src="assets/Icon@2x.png"
        width="114"
        height="114"
         />
  
  <icon src="assets/Icon-72.png"
        width="72"
        height="72"
         />

  <icon src="iTunesArtwork.png"
        width="512"
        height="512"
         />

  <icon src="Android_hdpi.png"
        width="72"
        height="72"
         />

  <icon src="Android_ldpi.png"
        width="36"
        height="36"
         />

  <icon src="Android_mdpi.png"
        width="48"
        height="48"
         />

  <icon src="Android_store_image.png"
        width="512"
        height="512"
         />


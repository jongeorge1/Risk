<label>NHS Number:</label>
<input type="text" name="nhsnumber" id="nhsnumber" value="<%=localStorage.treatmentNhsNumber%>"/>

<label>Main Hospital Number:</label>
<input type="number"
       name="hospitalnumber"
       id="hospitalnumber"
       value="<%=localStorage.treatmentHospitalNumber%>"/>

<label>PSA level(ng/ml) at diagnosis:</label>
<input type="number" name="PsaLevel" id="PsaLevel" value="<%=localStorage.treatmentPsaLevel%>"/>

<label>No. of biopsy samples (cores) taken:</label>
<input value="<%=localStorage.treatmentBiopsy%>" type="number" name="biopsy" id="biopsy"/>

<label>No. of cores affected:</label>
<input type="number"
       name="cores"
       id="cores"
       value="<%=localStorage.treatmentCores%>"/>

<label>Gleason score:</label>
<select name="gleason" id="gleason">
  <option value="">Select a Gleason score</option>
  <% for(var i = 2; i < 11; i++) {%>
  <option value="<%=i%>" <% if(localStorage.treatmentGleason == i){%> selected='selected' <%}%> >
    <%=i%>
  </option>
  <%}%>
</select>

 <a data-icon="info" data-theme="g" data-role="button" class="furtherDetails">What is a Gleason score?</a>

<label class="bigLabel">T stage at diagnosis:</label>
<select name="tstage"
        id="tstage">
  <option value="">Select a T stage</option>
  <% for(var i = 1; i < 5; i++) {%>
  <option value="<%=i%>" <% if(localStorage.treatmentTStage == i){%> selected='selected' <%}%> >
    T-<%= i %>
  </option>
  <%}%>
  </select>

  <a data-icon="info" data-theme="g" data-role="button" class="furtherDetails">What is prostate staging?</a>

<label>Treatment:</label>
<input type="text"
       name="treatment"
       id="treatment"
        value="<%=localStorage.treatmentTreatment%>"/>

<label id="date-label">Date treatment started:</label>
<input placeholder="Click to select date" type="text" name="date" id="Date" class="date mustBeInPast textinput" value="<%= $.scroller.formatDate('dd M yy', this.date) %>" />

<input type="submit" id="newpsalevelbutton" value="Record Treatment" data-icon="check" data-theme="g" />

<input type="hidden" id="DateTicks" value=""></input>
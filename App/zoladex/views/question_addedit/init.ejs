<input type="hidden" name="id" id="id" value="<%= this.id %>" />

<label>Question: </label>
<input type="text" class="required" name="Question" id="Question" value="<%= this.Question %>" />

<label>Answer (optional): </label>
<input type="text" name="Answer" id="Answer" value="<%= this.Answer %>" />

<% if (this.id) { %>
<input type="submit" id="newquestionbutton" data-icon="check" value="Save Changes" data-theme="g"/>
<% }else{ %>
<input type="submit" id="newquestionbutton" data-icon="check" value="Add Question" data-theme="g" />
<% } %>


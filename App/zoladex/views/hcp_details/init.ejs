<input id="id" type="hidden" value="<%= this.id %>" />

<li data-icon="false">
	<a href="#" >
		<strong>Name: </strong><%=this.Title%> <%=this.FirstName%> <%=this.Surname%>
	</a>
</li>

<li data-icon="false">
	<a href="#" >
		<strong>Job Role: </strong><%=this.JobRole%>
	</a>
</li>

<li>
	<a href="tel:<%=this.Telephone%>">
  <strong>Telephone: </strong><%=this.Telephone%>
	</a>
</li>
<li>
	<a href="mailto:<%=this.Email%>">
		<strong>Email: </strong><%=this.Email%>
	</a>
</li>

<% for(var i = 0; i < this.Practices.length; i++){ %>
<li>
	<a href=<%="../hcp/practicedetails.htm?id="+this.Practices[i].id %> >
		<strong>Hospital/Practice <%=i+1%>: </strong> <%=this.Practices[i].Name%>
	</a>
</li>
<% var link = "http://maps.google.com/maps?q=" + this.Practices[i].Postcode + ", UK"; %>

<% if(this.Practices[i].Postcode){ %>

<li>
	<a target="_blank" href= "<%=link%>" >
	Touch for directions to <%=this.Practices[i].Name%>
	</a>
</li>

<% } %>

<% } %>

<li data-icon="false">
	<a >
	<div class="notruncate">Notes: <%=this.Notes%></div>
	</a>
</li>

